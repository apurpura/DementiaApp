<?xml version="1.0" encoding="utf-8"?>
<!-- so this is hamburger Menu starts rest of tag on very bottom-->


    <!-- The main content view -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/uibluegradientbg"
    android:gravity="center|center_horizontal"
    android:weightSum="1">


    <RelativeLayout
        android:layout_width="367dp"
        android:layout_height="37dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0.34">

        <Spinner
            android:id="@+id/dynamic_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/uihamburgermenubgshadow"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"/>

        <Spinner
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:id="@+id/spinnerHamburger"
            android:background="@drawable/uihamburgerbtnselector"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp">


        <ImageButton
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:background="@drawable/mainmenutitle"
            android:id="@+id/imageButton2"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">

    <Button
        android:layout_width="340dp"
        android:layout_height="100dp"
        android:text="View Calendar"
        android:id="@+id/viewCalendar"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@drawable/uigreenbtntextseector"
        android:background="@drawable/uilargegreenbuttonselector"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">
        <Button
            android:layout_width="340dp"
            android:layout_height="100dp"
            android:text="Create Event"
            android:id="@+id/insertEvent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@drawable/uigreenbtntextseector"
            android:background="@drawable/uilargegreenbuttonselector"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">
        <Button
            android:layout_width="340dp"
            android:layout_height="100dp"
            android:text="Memory Analytics"
            android:id="@+id/memoryAnalytics"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@drawable/uigreenbtntextseector"
            android:background="@drawable/uilargegreenbuttonselector"/>
        </LinearLayout>

</LinearLayout>
