<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/uibluegradientbg">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageButton
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:id="@+id/imageButtonanalytictitle"
            android:layout_gravity="left|top"
            android:background="@drawable/analyticpagetitleimage" />

        <Button
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:id="@+id/HamburgerButtonInsertEvent"
            android:background="@drawable/uihamburgerbtnselector"
            android:layout_gravity="right|center_vertical"
            android:onClick="showPopUp"
            xmlns:android="http://schemas.android.com/apk/res/android" />
    </FrameLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <Spinner xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/account_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/account"
            android:layout_marginTop="5dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:textAlignment="center"
            android:background="@drawable/uilargegreenbuttonselector"
            android:textStyle="bold"
            android:textColor="@drawable/uigreenbtntextseector"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_gravity="center_horizontal"
        />

    </RelativeLayout>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.apurp_000.dementiaapp.MemoryRecallAnalytics"
    android:fillViewport="false"

    android:id="@+id/memoryAnalyticsLayout">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="vertical"
        android:id="@+id/rellay">
      <!--  <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/grid"
            android:columnCount="12"
            android:rowCount="50">
        </GridLayout>-->
    </LinearLayout>
</ScrollView>
</LinearLayout>
