<?xml version="1.0" encoding="utf-8"?>
<!-- so this is hamburger Menu starts rest of tag on very bottom-->


    <!-- The main content view -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/uibluegradientbg"
    android:gravity="center|center_horizontal"
    android:weightSum="1">


     <Button
         android:layout_width="65dp"
         android:layout_height="40dp"
         android:id="@+id/HamburgerButton"
         android:background="@drawable/uihamburgerbtnselector"
         android:layout_alignParentEnd="true"
         android:layout_alignParentTop="true"
         android:layout_gravity="right"
         android:onClick="showPopUp"/>

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="57dp"
         android:layout_marginBottom="30dp"
         android:layout_marginLeft="15dp"
         android:layout_marginTop="15dp">


         <ImageButton
             android:layout_width="320dp"
             android:layout_height="wrap_content"
             android:background="@drawable/mainmenutitle"
             android:id="@+id/imageButton2"
             android:layout_gravity="center_horizontal"
             android:layout_alignParentBottom="true" />
     </RelativeLayout>

     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginBottom="12dp">

     <Button
         android:layout_width="340dp"
         android:layout_height="100dp"
         android:text="View Calendar"
         android:id="@+id/viewCalendar"
         android:layout_gravity="center_horizontal"
         android:layout_weight="1"
         android:textSize="25sp"
         android:textStyle="bold"
         android:textColor="@drawable/uigreenbtntextseector"
         android:background="@drawable/uilargegreenbuttonselector"/>
     </LinearLayout>

     <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginBottom="12dp">
         <Button
             android:layout_width="340dp"
             android:layout_height="100dp"
             android:text="Create Event"
             android:id="@+id/insertEvent"
             android:layout_gravity="center_horizontal"
             android:layout_weight="1"
             android:textSize="25sp"
             android:textStyle="bold"
             android:textColor="@drawable/uigreenbtntextseector"
             android:background="@drawable/uilargegreenbuttonselector"/>
         </LinearLayout>

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginBottom="12dp">
         <Button
             android:layout_width="340dp"
             android:layout_height="100dp"
             android:text="Memory Analytics"
             android:id="@+id/memoryAnalytics"
             android:layout_gravity="center_horizontal"
             android:layout_weight="1"
             android:textSize="25sp"
             android:textStyle="bold"
             android:textColor="@drawable/uigreenbtntextseector"
             android:background="@drawable/uilargegreenbuttonselector"/>
         </LinearLayout>

 </LinearLayout>
