            android:contentDescription="@string/cardBack3x4"
            android:src="@drawable/cardback"
            android:background="@color/white"/>

        <ImageButton
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:id="@+id/imageButton4x1"
            android:layout_row="4"
            android:layout_column="1"
            android:contentDescription="@string/cardBack4x1"
            android:src="@drawable/cardback"
            android:background="@color/white"/>

        <ImageButton
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:id="@+id/imageButton4x2"
            android:layout_row="4"
            android:layout_column="2"
            android:contentDescription="@string/cardBack4x2"
            android:src="@drawable/cardback"
            android:background="@color/white"/>

        <ImageButton
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:id="@+id/imageButton4x3"
            android:layout_row="4"
            android:layout_column="3"
            android:contentDescription="@string/cardBack4x3"
