<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@android:color/white"
    tools:context="com.example.apurp_000.dementiaapp.MemoryRecallAnalytics"
    android:fillViewport="false"
    android:id="@+id/memoryAnalyticsLayout">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="12"
        android:rowCount="13">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Games:"
            android:id="@+id/gameHeader"
            android:layout_row="1"
            android:layout_column="1"
            android:textColor="@color/primary_material_dark"
            android:textSize="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Analytics"
            android:id="@+id/title"
            android:layout_row="0"
            android:layout_column="2"
            android:textColor="@color/darkgreen"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simon Says"
            android:id="@+id/simonSaysTitle"
            android:layout_row="3"
            android:layout_column="1"
            android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40"
            android:id="@+id/dynamicTotalWins"
            android:layout_row="4"
            android:layout_column="6"
            android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heigest Lvl"
            android:id="@+id/staticHeighestLevel"
            android:layout_row="6"
            android:layout_column="2"
            android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Lost"
            android:id="@+id/staticTotalLosses"
            android:layout_row="5"
            android:layout_column="2"
            android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Wins"
            android:id="@+id/staticTotalWins"
            android:layout_row="4"
            android:layout_column="2"
            android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:id="@+id/dynamicTotalLosses"
            android:layout_row="5"
            android:layout_column="6"
            android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spacer"
            android:layout_row="8"
            android:layout_column="5"
            android:text=" " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 3"
            android:id="@+id/dynamicHeighestLvl"
            android:layout_row="6"
            android:layout_column="6"
            android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Played Lvl"
            android:id="@+id/staticPlayedLevel"
            android:layout_row="7"
            android:layout_column="2"
            android:textSize="10dp"
            android:textColor="#443344"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 3"
            android:id="@+id/dynamicLastPlayedLevel"
            android:layout_row="7"
            android:layout_column="6"
            android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Memory Game"
            android:id="@+id/memoryGameTitle"
            android:layout_row="8"
            android:layout_column="1"
            android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Most Missed"
            android:id="@+id/staticMostMissed"
            android:layout_row="9"
            android:layout_column="2"
            android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 7"
            android:id="@+id/dyanmicMostMissed"
            android:layout_row="9"
            android:layout_column="6"
            android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fastest Solve"
            android:id="@+id/staticFastestSolve"
            android:layout_row="12"
            android:layout_column="2"
            android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 9"
            android:id="@+id/dynamicFastestSolve"
            android:layout_row="12"
            android:layout_column="6"
            android:textSize="10dp" />
    </GridLayout>
</ScrollView>
