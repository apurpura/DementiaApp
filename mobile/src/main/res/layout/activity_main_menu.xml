<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/uibluegradientbg">

    <Button
        android:layout_width="340dp"
        android:layout_height="0dp"
        android:text="View Calendar"
        android:id="@+id/viewCalendar"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@drawable/uigreenbuttontextseector"
        android:background="@drawable/uilargegreenbuttonselector"/>
    <Button
        android:layout_width="340dp"
        android:layout_height="0dp"
        android:text="Create Event"
        android:id="@+id/insertEvent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@drawable/uigreenbuttontextseector"
        android:background="@drawable/uilargegreenbuttonselector"/>

    <Button
        android:layout_width="340dp"
        android:layout_height="0dp"
        android:text="Trigger Notification"
        android:id="@+id/triggerNotification"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@drawable/uigreenbuttontextseector"
        android:background="@drawable/uilargegreenbuttonselector"/>
    <Button
        android:layout_width="340dp"
        android:layout_height="0dp"
        android:text="Memory Analytics"
        android:id="@+id/memoryAnalytics"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@drawable/uigreenbuttontextseector"
        android:background="@drawable/uilargegreenbuttonselector"/>

</LinearLayout>